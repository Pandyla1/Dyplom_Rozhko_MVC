@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    Layout = "~/Views/Shared/_LayoutPageOther.cshtml";
}

<body>
    <div style="display: grid; place-items: center; height: auto; ">
        <div style="width: 700px; margin-left: 100px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("Ім'я", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="RealNameUser" class="form-control" placeholder="Введіть ім'я"/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Нікнейм", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="NameUser" class="form-control" placeholder="Введіть нікнейм"/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Телефон", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="PhoneNumber" class="form-control" placeholder="Введіть номер телефону"/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Пошта", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="Email" class="form-control" placeholder="Введіть пошту"/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Пароль", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="Password" class="form-control" placeholder="Введіть пароль"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="display: grid; place-items: center;">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
